<h1>Books#show</h1>
<div class="row">
  <div class="col-md-3">

<h2>User info</h2>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<p>name<%= @user.name %></p>
<p>introduction</p>
<a><%= link_to "edit", edit_user_path %></a>


<h2>New book</h2>
<%=  form_with model: @newbook do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

  </div>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

<p><%= @book.title %></p>
<p><%= @book.body %></p>

<% if @user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id)%>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>
  </div>
</div>