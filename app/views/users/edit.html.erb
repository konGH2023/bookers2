<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this book from being saved
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @user, url: user_path(@user.id) , method: :patch do |f| %>

    <label for="inputName">Name</label>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>

    <label for="inputImage">Image</label>
    <div class="form-group">
      <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %></div>

    <label for="inputIntroduction">Introduction</label>
    <div class="form-group">
      <%= f.text_field :Introduction,  id:"inputIntroduction", placeholder:"説明" %></div>

    <div class="form-group"><%= f.submit "Update User" %></div>
  <% end %>
  </div>
</div>

