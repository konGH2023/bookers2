

<div class="row">
  <div class="col-md-3">

<h2>User info</h2>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<th>
  <tr>name</tr>
  <tr><%= @user.name %></tr>
</th>
<p>introduction</p>
<a><%= link_to "edit", edit_user_path(@user) %></a>


<h2>New book</h2>
<%=  form_with model: @newbook do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>

    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    <% end %>
      </thead>
    </table>

  </div>
</div>

